{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "WireScope",
  "version": "1.0.0",
  "identifier": "com.wirescope",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "vite",
    "beforeBuildCommand": "vite build"
  },
  "app": {
    "windows": [
      {
        "title": "WireScope",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "WireScope",
    "copyright": "Copyright Â© 2025 WireScope",
    "category": "DeveloperTool",
    "shortDescription": "Serial & Network Monitor",
    "longDescription": "Real-time serial port and network socket monitoring tool with advanced logging and analysis features.",
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    }
  }
}